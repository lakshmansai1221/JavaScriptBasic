        c=a+b;
        document.write(c);
    }
    function sub(){
        var a,b;
        a=Number(document.getElementById("first").value);
        b=Number(document.getElementById("second").value);
        c=a+b;
        document.write(c);
    }
    function mul(){
        var a,b;
        a=Number(document.getElementById("first").value);
        b=Number(document.getElementById("second").value);
        c=a+b;
        document.write(c);
    }
    function div(){
        var a,b;
        a=Number(document.getElementById("first").value);
        b=Number(document.getElementById("second").value);
        c=a+b;
        document.write(c);
    }
    </script>
    
